    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "port": 9227,
            "sourceMaps": true
        }  ,
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:1337",
            "webRoot": "${workspaceFolder}"
        },
    ],
    "compounds": [
        {
            "name": "Run and Debug",
            "configurations": ["Launch via NPM", "Launch Chrome"]
        }
    ]
}